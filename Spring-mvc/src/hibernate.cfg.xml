<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

       
<hibernate-configuration>
<session-factory>
	<property name="connection.username">root</property>
	<property name="connection.password">admin</property>
	<property name="connection.driver_class">
		com.mysql.jdbc.Driver
	</property>
	<property name="dialect">
		org.hibernate.dialect.MySQLDialect
	</property>
	<property name="hbm2dll.auto">update</property>
	<property name="connection.url">jdbc:mysql:///product</property>
	<mapping resource="com/xin/domain/Item.hbm.xml" />
	<mapping resource="com/xin/domain/Order.hbm.xml" />
	<mapping resource="com/xin/domain/OrderInformation.hbm.xml" />
	<mapping resource="com/xin/domain/User.hbm.xml" />


</session-factory>
</hibernate-configuration>
